<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8">
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:gravity="top"
		    android:layout_gravity="top">
		    <LinearLayout 
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:paddingRight="15dp"
		    	android:gravity="top"
		    	android:layout_gravity="top">
		    	<ImageView
		            android:layout_height="match_parent"
		            android:layout_width="0dp"
		            android:layout_weight=".4"
		            android:paddingLeft="15dp"
		            android:layout_marginTop="5dp"
		            android:id="@+id/schoolViewImage"
		            android:gravity="center|center_vertical"
		    		android:layout_gravity="center|center_vertical"
		    		android:scaleType="fitCenter"
		    		android:adjustViewBounds="true"/>
		    	<TextView
		    	    android:layout_width="0dp"
		    	    android:layout_height="wrap_content"
		    	    android:layout_marginLeft="15dp"
		    	    android:layout_weight=".6"
		    	    android:layout_gravity="center_vertical|center"
		    	    android:paddingLeft="15dp"
		    	    android:text=""
		    	    android:textColor="@color/text"
		    	    android:textSize="25dp"
		    	    android:id="@+id/schoolViewName" />

		    	<ImageButton
		    	    android:id="@+id/schoolSettings"
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:src="@drawable/settings"
		    	    android:background="@null"
		    	    android:onClick="settings"
		    	    android:gravity="center|center_vertical" 
		    	    android:layout_gravity="center|center_vertical"/>
	
		    </LinearLayout>
		    <TextView
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:textSize="15dp"
		    	android:layout_marginLeft="15dp"
		    	android:layout_marginTop="10dp"
		    	android:layout_marginBottom="10dp"
		    	android:layout_marginRight="15dp"
		    	android:textColor="@color/text"
		    	android:id="@+id/schoolViewBio"
		    	android:text=""
		    	android:gravity="top"
		    	android:layout_gravity="top"/>
		</LinearLayout>
	</ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/purple"
        android:text="View School Stories"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_weight=".11"
        android:onClick="viewStories" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".10"
        android:background="@color/green"
        android:text="Add New Story"
        android:onClick="addNew"
        android:textColor="#fff"
        android:id="@+id/schoolAddNew"
        android:textSize="18dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".10"
        android:background="@color/green"
        android:text="Donate to This School"
        android:onClick="donate"
        android:id="@+id/schoolDonate"
        android:textColor="#fff"
        android:textSize="18dp" />

</LinearLayout>
