<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
    android:background="#fff">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:id="@+id/viewListLinLayout"
	    android:layout_weight=".2">
	    <ImageView
	        android:layout_height="match_parent"
	        android:layout_width="0dp"
	        android:layout_weight=".25"
	        android:id="@+id/viewListImage"
	        android:adjustViewBounds="true"
	        android:scaleType="fitCenter"
	        android:gravity="center|center_vertical"
		    android:layout_gravity="center|center_vertical"
	        />
    	<TextView
		    android:layout_width="0dp"
		    android:layout_weight=".60"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="15dp"
		    android:layout_marginBottom="15dp"
		    android:textSize="25dp"
		    android:textColor="@color/text"
		    android:layout_gravity="center|center_vertical"
		    android:gravity="center|center_vertical"
		    android:id="@+id/viewListTitle"/>
    	<ImageButton
    	    android:id="@+id/viewListSettings"
    	    android:layout_width="0dp"
    	    android:layout_height="wrap_content"
    	    android:src="@drawable/settings"
    	    android:background="@null"
    	    android:onClick="settings"
    	    android:gravity="center|center_vertical" 
    	    android:layout_gravity="center|center_vertical"
    	    android:layout_weight=".15"/>
    </LinearLayout>
    <TextView
        android:layout_below="@id/viewListLinLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text"
        android:id="@+id/viewListLine"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="View School"
        android:onClick="viewSchool"
        android:textColor="#fff"
        android:id="@+id/viewListViewSchool"
        android:textSize="18dp"
        android:padding="20dp"
        android:layout_alignParentBottom="true" /> 
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:text="Donate to This School"
        android:onClick="donate"
        android:id="@+id/viewListDonate"
        android:padding="20dp"
        android:textColor="#fff"
        android:textSize="18dp" 
        android:layout_above="@id/viewListViewSchool"
        />
    
   
    <ListView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/viewListLine"
        android:layout_above="@id/viewListDonate"
        android:id="@+id/viewListListView"/>
</RelativeLayout>
